<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <PackageId>SchemaForge.Providers.Postgres</PackageId>
        <Version>1.0.5</Version>
        <Description>PostgreSQL provider for SchemaForge database migration</Description>
        <Authors>Sai Devulapalli</Authors>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageTags>database;migration;schema;postgres;postgresql;plugin</PackageTags>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="../SchemaForge.Abstractions/SchemaForge.Abstractions.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Npgsql" Version="10.0.1" />
      <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="10.0.2" />
    </ItemGroup>

</Project>